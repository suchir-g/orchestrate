# Firebase Configuration
# Get these values from Firebase Console > Project Settings > General > Your apps > Firebase SDK snippet
REACT_APP_FIREBASE_API_KEY=your_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id

# OpenAI API Configuration (for AI Assistant)
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# API Configuration (optional)
REACT_APP_API_BASE_URL=http://localhost:3001

# Blockchain Configuration (optional)
REACT_APP_TICKET_CONTRACT_ADDRESS=
REACT_APP_TOKEN_CONTRACT_ADDRESS=

# Feature Flags
REACT_APP_ENABLE_BLOCKCHAIN=true
REACT_APP_ENABLE_PREDICTIONS=true
